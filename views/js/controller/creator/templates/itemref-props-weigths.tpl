<div class="grid-row itemref-weight">
    <div class="col-9">
        <input data-identifier="itemref-weight-identifier" type="text"{{#if identifier}} value="{{identifier}}"{{/if}} />
    </div>
    <div class="col-2">
        <input data-identifier="itemref-weight-value" type="text"{{#if value}} value="{{value}}"{{/if}} />
    </div>
    <div class="col-1">
        <a class="itemref-weight-remove">
            <span class="icon-bin"></span>
        </a>
    </div>
</div>
